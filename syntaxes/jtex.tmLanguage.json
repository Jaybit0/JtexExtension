{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "jtex",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#commands"
		},
		{
			"include": "text.tex"
		}
	],
	"repository": {
		"comments": {
			"patterns":[
				{
					"name": "comment.single.jtex",
					"match": "%.*$\\n?",
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.jtex"
						}
					}
				},
				{
					"name": "comment.block.jtex",
					"begin": "/\\*(?!/)",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.jtex"
						}
					},
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": []
		},
		"commands": {
			"patterns": [
				{
					"begin": "--use",
					"end": "(\\n|,\\s*,|[^([a-zA-Z0-9]|,|\\s|\\-)]|([a-zA-Z0-9]+)\\s+[a-zA-Z0-9]+|[0-9].*)",
					"beginCaptures": {
						"0": {"name": "keyword.control.use"}
					},
					"endCaptures": {
						"2": {
							"name": "entity.name.function.jtex",
							"patterns": [{
								"name": "keyword.default",
								"match": "default"
							}]
						}
					},
					"patterns": [{
						"name": "keyword.default",
						"match": "default"
					},
					{
						"name": "entity.name.function.jtex",
						"match": "[a-zA-Z][a-zA-Z0-9]*(,[a-zA-Z][a-zA-Z0-9]*)*"
					}]
				},
				{
					"begin": "--js\\s*{",
					"end": "}",
					"beginCaptures": {
						"0": {
							"name": "keyword.control.open"
						}
					},
					"endCaptures": {
						"0": {"name": "keyword.control.close"}
					},
					"patterns": [{"include": "source.js"}]
				},
				{
					"begin": "--(m|math)\\s*{",
					"end": "}",
					"beginCaptures": {
						"0": {"name": "keyword.control.open"}
					},
					"endCaptures": {
						"0": {"name": "keyword.control.close"}
					},
					"patterns": [{"include": "#comments"},{"include": "#commands"},{"include": "text.tex"},{"include": "#curly-bracket-pair"},{"include": "#math-wrapped"}]
				},
				{
					"name": "keyword.control.jtex",
					"match": "--(\\(|\\{|\\[|\\)|\\}|\\])",
					"captures": {
						"1": {
							"name": "comment"
						}
					}
				},
				{
					"name": "keyword.control.jtex",
					"match": "--(([a-zA-Z]+)|[^\\s])"
				},
				{
					"begin": "--\\s",
					"end": ";",
					"beginCaptures": {
						"0": {"name": "keyword.control.open"}
					},
					"endCaptures": {
						"0": {"name": "keyword.control.close"}
					},
					"patterns": [{"include": "#comments"},{"include": "#commands"},{"include": "#math"}]
				}
			]
		},
		"math": {
			"name": "constant.numeric",
			"patterns": [{
				"include": "#commands"
			},{
				"begin": "\\(",
				"end": "\\)",
				"beginCaptures": {"0": {"name": "entity.other.inherited-class"}},
				"endCaptures": {"0": {"name": "entity.other.inherited-class"}},
				"patterns":[{"include": "#math-wrapped"}]
			},{
				"name": "keyword",
				"match": "(/|//|\\^|\\*|\\+|\\-|:=|=|=>|<=>|_|>|<|>=|<=)"
			},{
				"name": "entity.name.function",
				"match": "[a-zA-Z]([a-zA-Z0-9]|_)*"
			},{
				"name": "entity.other.attribute-name",
				"match": "."
			}]
		},
		"math-wrapped": {
			"patterns": [
				{
					"include": "#math"
				},
				{
					"name": "keyword",
					"match": ";"
				}
			]
		},
		"curly-bracket-pair": {
			"begin": "{",
			"end": "}"
		}
	},
	"scopeName": "source.jtex"
}